@model jQuery_Ajax_CRUD.Models.TransactionModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Translate" asp-route-id="" onsubmit="return jQueryAjaxPostTranslate(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="TransactionId" />*@
            <input type="hidden" asp-for="Date" />
         

            <div class="form-group">
                <label for="EnteredText" class="control-label">Enter Text</label>
                <input type="text" id="EnteredText" class="form-control" />

                <!-- Button to trigger the API call -->
                @*<button type="button" class="btn btn-primary" onClick="jQueryAjaxPostTranslate(this)">Update Display</button>*@
            </div>

            <!-- Display the result from the API call below the input -->
            <div id="displayText" class="text-muted"></div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
